<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/dotted_empty_border"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/order_item_iv_logo"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:src="@drawable/car_pic3"
        android:scaleType="fitXY" />

    <View
        android:id="@+id/order_item_v_divider"
        android:layout_toRightOf="@+id/order_item_iv_logo"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider"/>

    <TextView
        android:id="@+id/order_item_ctv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="5dp"
        android:text="Year : 2015"
        android:layout_above="@+id/order_item_ctv_time"
        android:layout_alignLeft="@+id/order_item_ctv_time"
        android:layout_alignStart="@+id/order_item_ctv_time" />
    <TextView
        android:id="@+id/order_item_ctv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:drawablePadding="5dp"
        android:text="Regsitration : MPFGDF4"
        android:layout_above="@+id/order_item_ctv_status"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/order_item_ctv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:drawableRight="@drawable/progress"
        android:drawablePadding="5dp"
        android:text="Color : Green"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/order_item_ctv_time"
        android:layout_alignStart="@+id/order_item_ctv_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="AUDI A7"
        android:textColor="@color/primary_text"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/order_item_v_divider"
        android:layout_toEndOf="@+id/order_item_v_divider" />


</RelativeLayout>